
@{
    ViewBag.Title = "CreatePlan";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h3 class="text-center my-5">Thêm mới kế hoạch</h3>
<div class="row m-0 p-0 justify-content-center">
    <form class="col-6 was-validated" action="/User/CreatePlan" method="post">
        <input type="hidden" name="club-id" value="@ViewBag.ID" />
        <div class="form-group">
            <label for="titile">Tiêu đề</label>
            <input type="text" class="form-control" id="title" name="title" placeholder="VD : Đi chùa .... " required />
            <div class="valid-feedback">Hợp lệ</div>
            <div class="invalid-feedback">Không để trống</div>
        </div>
        <!--Thời gian bắt đầu-->
        <div class="form-group">
            <label for="start-datetime">Thời gian bắt đầu</label>
            <input type="datetime-local" class="form-control" name="start-datetime" id="start-datetime" required />
            <div class="valid-feedback">Hợp lệ</div>
            <div class="invalid-feedback">Không để trống</div>
        </div>

        <!--Nội dung-->
        <div class="form-group">
            <label for="content">Nội dung</label>
            <textarea class="form-control" id="content" name="content" rows="3" required></textarea>
            <div class="valid-feedback">Hợp lệ</div>
            <div class="invalid-feedback">Không để trống</div>
        </div>
        <button class="btn btn-info" type="submit">Thêm kế hoạch</button>
        <button class="btn btn-secondary" id="reset">Làm mới</button>
    </form>
</div>

@section scripts{
    <script>
        $(document).ready(function () {
            $('#reset').click(function (e) {
                e.preventDefault();
                $('#title').val("");
                $('#start-datetime').val("");
                $('#content').val('');
            });
        });
    </script>    
}


